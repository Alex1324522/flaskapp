pipeline {

    agent any

    stages {

        stage('Build Flask app') {
            steps{
                echo '-----START BUILD APP-----'
                sh """
                cd $FLASK_APP_DIR
                docker build -t $FLASKAPP_DOCKER_TAG .
                """
                echo '-----START BUILD APP-----'
            }
        }
        stage('Docker login') {
            steps {
                sh """ 
                docker login -u $DOCKERHUB_USER -p $DOCKERHUB_PASSWD
                """
            }
        }
        stage('Docker push to registry') {
            steps {
                sh 'docker push $FLASKAPP_DOCKER_TAG'
            }

        }

    }
}